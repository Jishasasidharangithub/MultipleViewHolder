<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.OrderInfoFragment">

    <include
        android:id="@+id/includeToolbar"
        layout="@layout/toolbar_layout"
        />

    <EditText
        android:id="@+id/etFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="FIRST NAME"
        app:layout_constraintTop_toBottomOf="@+id/includeToolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white"
        android:textColor="@color/text_color"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_15sdp"
        style="@style/normalTextRegular"
        />

    <View
        android:id="@+id/ViewFirstName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/Grey"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@+id/etFirstName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/etSecondName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="SECOND NAME"
        app:layout_constraintTop_toBottomOf="@+id/ViewFirstName"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white"
        android:textColor="@color/text_color"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_15sdp"
        style="@style/normalTextRegular"
        />

    <View
        android:id="@+id/ViewSecondName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/Grey"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@+id/etSecondName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/etPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="PHONE NUMBER"
        app:layout_constraintTop_toBottomOf="@+id/ViewSecondName"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white"
        android:textColor="@color/text_color"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_15sdp"
        style="@style/normalTextRegular"
        />

    <View
        android:id="@+id/ViewPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/Grey"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@+id/etPhoneNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/etAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="ADDRESS"
        app:layout_constraintTop_toBottomOf="@+id/ViewPhoneNumber"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white"
        android:textColor="@color/text_color"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_15sdp"
        style="@style/normalTextRegular"
        />

    <View
        android:id="@+id/ViewAddress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/Grey"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@+id/etAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/etZIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="ZIP"
        app:layout_constraintTop_toBottomOf="@+id/ViewAddress"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white"
        android:textColor="@color/text_color"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_15sdp"
        style="@style/normalTextRegular"
        />

    <View
        android:id="@+id/ViewZIP"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/Grey"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@+id/etZIP"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/etCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="CITY"
        app:layout_constraintTop_toBottomOf="@+id/ViewZIP"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white"
        android:textColor="@color/text_color"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_15sdp"
        style="@style/normalTextRegular"
        />

    <View
        android:id="@+id/ViewCity"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/Grey"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@+id/etCity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:text="Proceed to Payment"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginHorizontal="@dimen/_30sdp"
        style="@style/largeTextRegular"
        app:cornerRadius="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="#091C85"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ViewCity"
        app:layout_constraintVertical_bias="0.338" />



</androidx.constraintlayout.widget.ConstraintLayout>
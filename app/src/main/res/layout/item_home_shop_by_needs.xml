<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvTitle"
        style="@style/extraLargeTextBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHOP BY NEEDS"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_12ssp"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/ViewCardiac"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_2sdp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.296"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <ImageView
        android:id="@+id/ivCardiacCare"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_180sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:scaleType="fitXY"
        android:src="@drawable/cardiac_care"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ViewCardiac"/>

    <ImageView
        android:id="@+id/ivOralCare"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_90sdp"
        android:scaleType="fitXY"
        android:src="@drawable/oral_care"
        app:layout_constraintStart_toEndOf="@+id/ivCardiacCare"
        app:layout_constraintTop_toTopOf="@+id/ivCardiacCare"/>

    <ImageView
        android:id="@+id/ivElderlyCare"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_90sdp"
        android:scaleType="fitXY"
        android:src="@drawable/elderly_care"
        app:layout_constraintStart_toEndOf="@+id/ivCardiacCare"
        app:layout_constraintTop_toBottomOf="@+id/ivOralCare"/>




</androidx.constraintlayout.widget.ConstraintLayout>